<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/1.6/template-install.dtd">
<extension version="2.5" type="template" client="site">
	<name>GeekHub</name>
	<creationDate>10 November 2012</creationDate>
	<author>Ternovy Ruslan</author>
	<authorEmail>rusterovich@mail.ru</authorEmail>
	<copyright>Copyright (C) 2005 - 2012 Open Source Matters, Inc. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<version>3.0.0</version>
	<description>TPL_GEEKHUB_XML_DESCRIPTION</description>

	<files>
		<folder>css</folder>
		<folder>images</folder>
		<folder>javascript</folder>
		<folder>language</folder>
		<filename>index.html</filename>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<filename>favicon.ico</filename>
	</files>

	<positions>
		<position>main-menu</position>
		<position>footer-menu</position>
	</positions>

	<!-- 	For core templates, we also install/uninstall the language files in the core language folders.
	-->
	<languages folder="language">
        <language tag="ru-RU">ru-RU/ru-RU.tpl_geekhub.ini</language>
        <language tag="ru-RU">ru-RU/ru-RU.tpl_geekhub.sys.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_geekhub.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_geekhub.sys.ini</language>
	</languages>

</extension>
